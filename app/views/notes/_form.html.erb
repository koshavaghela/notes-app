<% if @note.errors.any? %>
	<h2>The following errors prevented the note from saving:</h2>
	<ul>
		<% @note.errors.full_messages.each do |msg|%>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%=	form_for @note do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%=	f.label :body %><br>
		<%= f.text_area :body %>
	</p>
	 <p>
	 	<%= f.submit %>
	 </p>
<% end %>
